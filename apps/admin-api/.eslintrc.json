{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "../../.eslintrc.json"
    ],
    "ignorePatterns": ["!**/*"],
    "env": {
        "es2021": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "@typescript-eslint/explicit-function-return-type": "warn",
        "@typescript-eslint/no-inferrable-types": "error"
    }
}
