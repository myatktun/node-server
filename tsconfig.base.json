{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "removeComments": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@projectx/admin/provider": ["libs/admin/provider/src/index.ts"],
            "@projectx/admin/ui": ["libs/admin/ui/src/index.ts"],
            "@projectx/shared/interface": ["libs/shared/interface/src/index.ts"],
            "@projectx/shared/models": ["libs/shared/models/src/index.ts"],
            "@projectx/shared/ui": ["libs/shared/ui/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
